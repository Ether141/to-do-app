<Page x:Class="ToDoAppClient.Pages.ToDoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:str="clr-namespace:ToDoAppClient.Resources.Strings"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToDoAppClient.Pages"
      mc:Ignorable="d" 
      Width="1920" Height="1080"
      Title="ToDoPage"
      Background="{DynamicResource backgroundBrush}">

    <Grid>
        <StackPanel Margin="15">
            <Label Content="Lista zakupów 15.02.2022" FontSize="32"/>
            <Rectangle Fill="{DynamicResource secondBackgroundBrush}" Height="1" Margin="10 5 10 0"/>

            <StackPanel Margin="15">
                <DockPanel>
                    <CheckBox VerticalAlignment="Center"/>
                    <Label VerticalAlignment="Center" Content="Jabłka x3"/>
                </DockPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
